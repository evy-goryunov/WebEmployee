<Window x:Class="WebEmployeeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebEmployeeClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<StackPanel Margin="10,10,0,61" HorizontalAlignment="Left">
			<ListView Margin="10" x:Name="LvEmp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="ID"
                                    Width="35" 
                                    DisplayMemberBinding="{Binding _id}"/>

						<GridViewColumn Header="Фамилия" Width="120" 
                                    DisplayMemberBinding="{Binding _sureName}"/>

						<GridViewColumn Header="Имя" Width="120" 
                                    DisplayMemberBinding="{Binding _firstName}" />

						<GridViewColumn Header="Отдел" Width="120" 
                                    DisplayMemberBinding="{Binding _department}"/>

						<GridViewColumn Header="Возраст" Width="50" 
                                    DisplayMemberBinding="{Binding _age}"  />

						<GridViewColumn Header="Зарплата" Width="120" 
                                    DisplayMemberBinding="{Binding _salary}" />
					</GridView>
				</ListView.View>
			</ListView>
		</StackPanel>
		<TextBox x:Name="SureName" HorizontalAlignment="Left" Height="23" Margin="631,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="FirstName" HorizontalAlignment="Left" Height="23" Margin="631,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="Department" HorizontalAlignment="Left" Height="23" Margin="631,168,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="Salary" HorizontalAlignment="Left" Height="23" Margin="631,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="Age" HorizontalAlignment="Left" Height="23" Margin="631,293,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<Label Content="Фамилия" HorizontalAlignment="Left" Margin="631,19,0,0" VerticalAlignment="Top"/>
		<Label Content="Имя" HorizontalAlignment="Left" Margin="631,79,0,0" VerticalAlignment="Top"/>
		<Label Content="Отдел" HorizontalAlignment="Left" Margin="631,142,0,0" VerticalAlignment="Top"/>
		<Label Content="Зарплата" HorizontalAlignment="Left" Margin="631,204,0,0" VerticalAlignment="Top"/>
		<Label Content="Возраст" HorizontalAlignment="Left" Margin="631,267,0,0" VerticalAlignment="Top"/>
		<Button x:Name="AddBtn" Content="Добавить" HorizontalAlignment="Left" Margin="631,354,0,0" VerticalAlignment="Top" Width="75"/>
	</Grid>
</Window>
